GRAMMAR_TESTS      = $(shell find . -maxdepth 1 -name "test.grammar.*.py" -execdir basename {} ';')
TRANSLATOR_TESTS   = $(shell find . -maxdepth 1 -name "test.translator.*.py" -execdir basename {} ';')
INDEXER_TESTS      = $(shell find . -maxdepth 1 -name "test.indexer.*.py" -execdir basename {} ';')
PREPROCESSOR_TESTS = $(shell find . -maxdepth 1 -name "test.preprocessor.*.py" -execdir basename {} ';')
CUSTOM_TESTS       = $(shell find . -maxdepth 1 -name "test.custom.*.py" -execdir basename {} ';')

.PHONY: $(GRAMMAR_TESTS) $(TRANSLATOR_TESTS) $(INDEXER_TESTS) $(PREPROCESSOR_TESTS) $(CUSTOM_TESTS)\
	test.grammar test.translator test.indexer test.preprocessor test.custom

all: test.grammar test.translator test.indexer test.preprocessor test.custom

TESTS = $(GRAMMAR_TESTS) $(TRANSLATOR_TESTS) $(INDEXER_TESTS) $(PREPROCESSOR_TESTS) $(CUSTOM_TESTS)

$(TESTS): %:
	python3 $@

test.grammar: $(GRAMMAR_TESTS)

test.translator: $(TRANSLATOR_TESTS)

test.indexer: $(INDEXER_TESTS)

test.preprocessor: $(PREPROCESSOR_TESTS)

test.custom: $(CUSTOM_TESTS)
