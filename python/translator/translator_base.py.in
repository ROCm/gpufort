def bytes(fType,kind,default=None):
    assert type(fType) is str
    assert type(kind) is str
    kindLower = kind.lower()
    return FORTRAN_TYPE_2_BYTES_MAP.get(fType.lower(),{ kindLower : default }).get(kindLower, "UNKNOWN")

